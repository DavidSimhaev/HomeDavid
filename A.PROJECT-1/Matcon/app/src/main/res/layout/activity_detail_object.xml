<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:name=".DetailObjectActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#B59A9A"

    android:paddingRight="100dp"
    tools:context=".DetailObjectActivity">


    <!-- Check out the g.co/wallet/button-guidelines to learn more -->

    <LinearLayout

        android:layout_width="391dp"
        android:layout_height="798dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:paddingRight="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <LinearLayout
            android:id="@+id/frameDetText"

            android:layout_width="361dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1px"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:text="@string/sample_pass"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4B42CD"
                    android:text="שינוי תמונה"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4B42CD"
                    android:text="שינוי טקסט"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#C53C3C"
                    android:text="מחיקה"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="309dp"
                android:id="@+id/frame_detail_data"
                android:background="@drawable/bglinearlayout">

                <ScrollView
                    android:id="@+id/ScrollViewTextDet"
                    android:layout_width="match_parent"
                    android:layout_height="318dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="20sp" />

                    </LinearLayout>
                </ScrollView>

            </FrameLayout>

            <Button
                android:id="@+id/button11"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#4B42CD"
                android:text="@string/send"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.Toolbar>